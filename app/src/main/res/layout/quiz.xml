<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tango"
                android:text="Pertanyaan Umum"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginTop="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/progressbar"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tango"
                android:textColor="@color/black"
                android:text="Jawablah pertanyaan-pertanyaan di bawah!"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"/>

            <!--  Question 1  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="35dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Apakah Anda merasakan demam akhir-akhir ini?"
                    android:textSize="16dp"
                    android:fontFamily="@font/utendo"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q1_ya"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Ya"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q1_tidak"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_selector"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!--  Question 2  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="35dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="2. Jika mengalami demam, apakah suhu terus meningkat, stagnan, atau naik turun?"
                    android:fontFamily="@font/utendo"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q2_meningkat"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Meningkat"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q2_stagnan"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Stagnan"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q2_naikturun"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Naik Turun"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q2_tidaktahu"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak Tahu"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!--  Question 3  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="35dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="3. Apakah Anda pernah mendapatkan transfusi darah?"
                    android:fontFamily="@font/utendo"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q3_ya"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Ya"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q3_tidak"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!--  Question 4  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="35dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="4. Apakah anda pernah melakukan tato?"
                    android:fontFamily="@font/utendo"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q4_ya"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Ya"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q4_tidak"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!--  Question 5  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="35dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="5. Apakah anda pernah melakukan tindik?"
                    android:fontFamily="@font/utendo"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q5_ya"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Ya"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q5_tidak"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!--  Question 6  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="35dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="6. Apakah anda pernah melakukan aktivitas yang melibatkan memasukkan jarum ke tubuh? (ex : injeksi, perawatan, cek gula darah, cek golongan darah)"
                    android:fontFamily="@font/utendo"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q6_ya"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Ya"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q6_tidak"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!--  Question 7  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="35dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="7. Apakah ada riwayat penyakit Hepatitis di lingkungan kerja atau keluarga Anda?"
                    android:fontFamily="@font/utendo"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q7_ya"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Ada"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q7_tidak"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak Ada"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!--  Question 8  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:paddingHorizontal="35dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="8. Apakah akhir-akhir ini Anda pernah makan di tempat yang kurang higenis?"
                    android:fontFamily="@font/utendo"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q8_ya"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Pernah"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/q8_tidak"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:text="Tidak Pernah"
                    android:fontFamily="@font/utendo"
                    android:background="@drawable/button_border"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

        <Button
            android:id="@+id/berikutnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="Berikutnya"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/black"
            />

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>